WindowManager:
    MainWindow:

<MainWindow>:
    name:'main'
    player_python:spinner_id

    GridLayout:
        cols:1

        GridLayout:
            cols:1

            Spinner:
                text: 'Player'
                values: ['Brad', 'Patrick', 'Joey', 'Simon']
                id: spinner_id
                on_text: root.spinner_clicked(spinner_id.text)

        Button:
            text: 'Random'
            on_press: root.btn()


<P>:
    output:output

    FloatLayout:
        Label:
            id: output
